{{#extend "layout"}}
{{#content "body"}}
    <div>
        <p>
            <a href="../">Back to list</a> /
            {{#unless newPage}}<a href="../view/{{page.title}}">Cancel edit</a>{{/unless}}
        </p>
    </div>
    <article>
        <h1>{{page.title}}</h1>
        {{#if newPage}}<p class="light">Creating a new page</p>{{/if}}
        <div>
            <p>
                <form name="save" id="form-save" method="post" action="/save/{{page.title}}">
                    <input type="submit" value="Save" class="button button-primary"></input>
                </form>
                <form name="delete" id="form-delete" method="post" action="/delete/{{page.title}}">
                    <input type="submit" value="Delete"></input>
                </form>
            </p>
        </div>
        <textarea class="content" form="form-save" name="content">{{page.content}}</textarea>
    </article>
{{/content}}
{{/extend}}
